<?php

$title = 'Edit Film';
$this->headTitle($title);
?>
    <h1><?= $this->escapeHtml($title) ?></h1>
<?php
/** @var \Zend\Form\Form $title */
$title = $this->form->get('category')->get('title');
$title->setAttribute('class', 'form-control');
$title->setAttribute('placeholder', 'Category title');

// This provides a default CSS class and placeholder text for the artist element:
/** @var \Zend\Form\Form $synopsis */
$synopsis = $this->form->get('film')->get('synopsis');
$synopsis->setAttribute('class', 'form-control');
$synopsis->setAttribute('placeholder', 'Film synopsis');

// This provides a default CSS class and placeholder text for the artist element:
/** @var \Zend\Form\Form $genre */
$genre = $this->form->get('film')->get('genre');
$genre->setAttribute('class', 'form-control');
$genre->setAttribute('placeholder', 'Film genre');

// This provides a default CSS class and placeholder text for the artist element:
/** @var \Zend\Form\Form $director */
$director = $this->form->get('film')->get('director');
$director->setAttribute('class', 'form-control');
$director->setAttribute('placeholder', 'Film Réalisateur');


// This provides a default CSS class and placeholder text for the artist element:
/** @var \Zend\Form\Form $dateRelease */
$dateRelease = $this->form->get('film')->get('date_release');
$dateRelease->setAttribute('class', 'form-control');
$dateRelease->setAttribute('placeholder', 'Film Réalisateur');

/** @var \Zend\Form\Form $category */
$category = $this->form->get('film')->get('category');
$category->setAttribute('class', 'form-control');
$category->setAttribute('placeholder', 'Film Categories');


/** @var \Zend\Form\Form $submit */
$submit = $this->form->get('submit');
$submit->setAttribute('class', 'btn btn-primary');

$this->form->setAttribute(
    'action', $this->url(
    'category', [
        'action' => 'edit',
        'id'     => $this->id,
    ]
)
);
$this->form->prepare();

echo $this->form()->openTag($this->form);
?>
    <div class="form-group">
        <?= $this->formLabel($title) ?>
        <?= $this->formElement($title) ?>
        <?= $this->formElementErrors()->render($title, ['class' => 'help-block']) ?>
