        <?= $this->formElementErrors()->render($director, ['class' => 'help-block']) ?>
    </div>

    <div class="form-group">
        <?= $this->formLabel($dateRelease) ?>
        <?= $this->formElement($dateRelease) ?>
        <?= $this->formElementErrors()->render($dateRelease, ['class' => 'help-block']) ?>
    </div>

    <div class="form-group">
        <?= $this->formLabel($category) ?>
        <?= $this->formElement($category) ?>
        <?= $this->formElementErrors()->render($category, ['class' => 'help-block']) ?>
    </div>

<?php
echo $this->formSubmit($submit);
echo $this->formHidden($this->form->get('film')->get('id'));
